<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="426dp"
        android:layout_height="267dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="419dp"
            android:layout_height="match_parent">


            <TableRow
                android:id="@+id/chHr3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="208dp"
                android:background="#696969"
                card_view:layout_constraintBottom_toTopOf="@+id/title"
                tools:layout_editor_absoluteX="-16dp"></TableRow>

            <ImageView
                android:id="@+id/chItImageView"
                android:layout_width="111dp"
                android:layout_height="122dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="278dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.246" />

            <TextView
                android:id="@+id/chItDesc"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_above="@+id/chItPrice"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:text="Description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.062" />

            <TextView
                android:id="@+id/chItPrice"
                android:layout_width="81dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="68dp"
                android:text="Price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.522"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/chItTitle"
                android:layout_width="136dp"
                android:layout_height="29dp"
                android:layout_above="@+id/chItDesc"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="94dp"
                android:layout_marginBottom="3dp"
                android:text="Title"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/chVr1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="239dp"
                android:background="#696969" />

            <TableRow
                android:id="@+id/chHr1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="65dp"
                android:background="#696969"
                card_view:layout_constraintBottom_toTopOf="@+id/title"
                tools:layout_editor_absoluteX="-16dp"></TableRow>

            <TableRow
                android:id="@+id/chHr2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:background="#696969"
                app:layout_constraintBottom_toTopOf="@+id/title"
                tools:layout_editor_absoluteX="-16dp">

            </TableRow>

            <TextView
                android:id="@+id/chItCount"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="89dp"
                android:layout_marginBottom="22dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderIdLabel"
                android:layout_width="112dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="275dp"
                android:layout_marginBottom="220dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Order Id" />

            <TextView
                android:id="@+id/orderIdValue"
                android:layout_width="216dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="220dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/outForDeliveryLabel"
                android:layout_width="138dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="258dp"
                android:layout_marginBottom="23dp"
                android:gravity="center"
                android:text="Out For Delivery"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/qtyLabel"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="126dp"
                android:layout_marginBottom="21dp"
                android:gravity="center"
                android:text="Quantity:" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>